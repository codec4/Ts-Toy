{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "runtimeVersion": "22",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/app.ts",
      "outFiles": ["${workspaceFolder}/build/**/*.js"],
      "smartStep": true,
      "preLaunchTask": "npm: build",
      "showAsyncStacks": true,
      "pauseForSourceMap": false
    }
  ]
}
